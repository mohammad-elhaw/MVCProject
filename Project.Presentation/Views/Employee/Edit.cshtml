@model EmployeeForUpdateDto
@{
    ViewData["Title"] = "Edit";
}

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <partial name="_ToastPartialView" />
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Employee</h1>
    <form method="post" asp-controller="Employee" asp-action="Edit" class="row col-8">
        <partial name="PartialViews/CreateEditEmployeePartial"/>
    </form>
</div>

@section ValidtionScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}