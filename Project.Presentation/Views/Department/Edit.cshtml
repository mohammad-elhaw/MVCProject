@model DepartmentForUpdateDto
@{
    ViewData["Title"] = "Edit";
}

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <partial name="_ToastPartialView" />
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Department</h1>
    <form method="post" asp-controller="Department" asp-action="Edit" class="col-8">
        <partial name="PartialViews/CreateEditDepartmentPartial"/>
    </form>
</div>

@section ValidtionScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
