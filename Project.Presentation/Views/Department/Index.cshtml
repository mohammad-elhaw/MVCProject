@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">All Departments</h1>
<a class="btn btn-primary my-3" asp-controller="Department" asp-action="Create">Create Department</a>

@if (Model.Any())
{
    <table class="table table-hover">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(d => d.Code)</th>
                <th>@Html.DisplayNameFor(d => d.Name)</th>
                <th>@Html.DisplayNameFor(d => d.Description)</th>
                <th>@Html.DisplayNameFor(d => d.DataOfCreation)</th>
                <th>Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.DataOfCreation</td>
                    <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i> Details</a></td>
                    <td><a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-2">
        <h2>No Departments Found!!</h2>
    </div>
}

